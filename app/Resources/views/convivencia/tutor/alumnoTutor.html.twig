{% extends 'base2.html.twig' %}

{% block body %}
    {% include 'convivencia/navegacion.html.twig' %}

    <div class="center">
        <h3 class="center azul-prof fuente">Alumnos</h3>
        <div class="row">
            {% for alumno in alumnos %}
                <div class="col s6 m4 l2 carta ancho">
                    <div class="card">
                        <div class="card-image">
                            <img src="{{ asset('img/alumnos/'~alumno.foto) }}">
                            <span class="card-title"></span>
                        </div>

                        <div class="card-action blue darken-1 ">
                            <a href="{{ path("verAlumno", {'id': alumno.id}) }}">{{ alumno.getNombreCompleto() }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>

    </div>

{% endblock %}
